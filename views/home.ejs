<%- include("partials/header"); -%>

  <h1>Home</h1>
  <p><%= homeStartingContent %></p>

  <% posts.forEach(function(post){ %>
    <h1><%= post.title %></h1>
    <% let maxLength = 100; %>
    <% if (post.content.length > maxLength) { %>
      <p>
        <%= post.content.substring(0, maxLength) + "..." %>
        <a href="/posts/<%= post._id %>">Read More</a>
      </p>
    <% } else { %>
      <p><%= post.content %></p>
    <% } %>
  <% }) %>

<%- include("partials/footer"); -%>
